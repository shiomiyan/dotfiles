" vim: ft=vim

" Interface
set clipboard+=unnamed
set scrolloff=10
set sidescrolloff=10
set showmode

" Search
set hlsearch
set incsearch
set smartcase

" IdeaVim
set highlightedyank
set easymotion

" Keymaps
nnoremap <Space> <Nop>
let mapleader=" "
nnoremap j gj
nnoremap k gk
nnoremap H ^
nnoremap <C-h> :nohlsearch<CR>
nnoremap <Tab> gt
nnoremap <S-Tab> gT

vmap p _dp
